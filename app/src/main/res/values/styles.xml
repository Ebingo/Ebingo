<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorHint">#b7b7b7</item>
    </style>

    <style name="tab_btn" parent="font_gray_12">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">-5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_singl_base_style">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_14_tv" parent="font_gray_14">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_12_tv" parent="font_gray_12">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_11_tv" parent="font_gray_12">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="orange_15_tv" parent="font_orange_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="light_gray_15_tv" parent="tv_singl_base_style">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/info_name_gray</item>
    </style>


    <style name="orange_14_tv" parent="font_orange_14">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_15_tv" parent="font_gray_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="blue_15_tv" parent="tv_singl_base_style">
        <item name="android:textColor">@color/title_blue</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="black_15_tv" parent="font_black_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_pad_style">
        <item name="android:scrollbars">none</item>
        <item name="android:paddingLeft">@dimen/list_pad_r_l</item>
        <item name="android:paddingRight">@dimen/list_pad_r_l</item>
    </style>

    <style name="red_15_tv" parent="font_red_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="single_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="blue_button" parent="single_button">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="yellow_button" parent="single_button">
        <item name="android:background">@drawable/btn_yellow</item>
    </style>

    <style name="green_button" parent="single_button">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="back_arro_style">
        <item name="android:src">@drawable/title_back</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <style name="category_tv_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginLeft">1px</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@drawable/gray_white_selector</item>
        <item name="android:background">@drawable/pop_blue_selector</item>
    </style>

    <style name="list_item_style">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="listview_style" parent="list_pad_style">
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/center_divider</item>
    </style>


    <style name="info_content_pad">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
    </style>

    <style name="info_content_mid_pad">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
    </style>

    <style name="list_item_pad">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="center_divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="cent_item" parent="gray_15_tv">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@drawable/click_whit_bg</item>
        <item name="android:drawableRight">@drawable/right_arro</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="publish_item">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="publish_edit">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="frame_table_row">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="frame_bg_layout">
        <item name="android:background">@drawable/corner_frame</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="frame_bg_login" parent="frame_bg_layout">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@drawable/corner_frame_light</item>
    </style>

    <style name="frame_row_login">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_height">@dimen/login_input_height</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="vertical_divider_20">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/publish_base_color</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/center_divider</item>
    </style>

    <style name="publish_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/publish_base_color</item>
    </style>

    <style name="tag_style">
        <item name="android:button">@drawable/tags_bg</item>
        <item name="android:background">@drawable/tags_bg</item>
        <item name="android:textColor">@drawable/tags_text_selector</item>
        <item name="android:checked">false</item>
        <item name="android:text">互联网</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="right_arrow">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/right_arro</item>
    </style>

    <style name="inter_prise_info_img">
        <item name="android:layout_width">@dimen/interprise_info_img_width</item>
        <item name="android:layout_height">@dimen/interprise_info_img_height</item>
    </style>

    <style name="iprise_s_d_tab_style" parent="orange_15_tv">
        <item name="android:orientation">horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/gray_orange_selector</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_pad_black_15_tv" parent="font_black_15">

        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="item_pad_gray_15_tv" parent="font_gray_15">

        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="center_num_style">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/trans_black_clickable</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="rb_my_privilege_info">
        <item name="android:drawablePadding">-5dp</item>
        <item name="android:background">@drawable/rb_privilege_bg</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@drawable/text_select_red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

    <style name="tv_no_data" parent="font_gray_20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:id">@android:id/empty</item>
        <item name="android:text">@string/no_data</item>
    </style>

    <style name="list_has_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@android:id/list</item>
    </style>

    <style name="logo_style">
        <item name="android:layout_marginTop">@dimen/logo_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/logo_margin_bottom</item>
    </style>

    <style name="login_edit_style">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="home_subtitle_style">
        <item name="android:layout_marginLeft">@dimen/main_subtitle_marg_left</item>
        <item name="android:layout_marginRight">@dimen/main_subtitle_marg_left</item>
    </style>

    <style name="home_item_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="category_check_style" parent="@style/font_black_15">

        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:drawableRight">@drawable/blue_arro_check</item>
    </style>

    <style name="long_btn_styl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="tv_warn_style" parent="font_orange_15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_warn</item>
        <item name="android:drawableRight">@drawable/ic_edit</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:paddingRight">23dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="popupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/pop_drop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_drop_out</item>
    </style>
</resources>

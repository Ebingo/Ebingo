<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorHint">#d4d9db</item>
    </style>

    <style name="tab_btn" parent="font_gray_12">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">-5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="tv_singl_base_style">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_14_tv" parent="font_gray_14">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="gray_11_tv" parent="font_gray_12">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="orange_15_tv" parent="font_orange_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="light_gray_15_tv" parent="tv_singl_base_style">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/info_name_gray</item>
    </style>


    <style name="orange_14_tv" parent="font_orange_14">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_15_tv" parent="font_gray_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="blue_15_tv" parent="tv_singl_base_style">
        <item name="android:textColor">@color/title_bule</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="black_15_tv" parent="font_black_15">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="single_button">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="blue_button" parent="single_button">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="yellow_button" parent="single_button">
        <item name="android:background">@drawable/btn_yellow</item>
    </style>

    <style name="green_button" parent="single_button">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="back_arro_style">
        <item name="android:src">@drawable/back_arro</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <style name="category_tv_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@drawable/gray_white_selector</item>
        <item name="android:background">@drawable/blue_selector</item>
    </style>

    <style name="list_item_style">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="listview_style">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/divide_gray</item>
    </style>


    <style name="info_content_pad">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
    </style>

    <style name="center_divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="cent_item" parent="gray_15_tv">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableRight">@drawable/right_arro</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="publish_item">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="publish_edit">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="publish_table_row">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="frame_bg_layout">
        <item name="android:background">@drawable/corner_frame</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="vertical_divider_20">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/publish_base_color</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/publish_base_color</item>
    </style>
    <style name="pulish_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/publish_base_color</item>
    </style>
</resources>

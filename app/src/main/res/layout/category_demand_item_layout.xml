<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/cate_demand_item_time_tv"
            android:layout_width="wrap_content"
            style="@style/gray_12_tv"
            android:layout_alignParentRight="true"
            android:text="08-4"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cate_demand_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="@id/cate_demand_item_time_tv"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/cate_demand_item_time_tv"
            android:text="求購白三色金剛"
            style="@style/black_15_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_num"
            android:layout_marginTop="2dp"
            android:layout_below="@id/cate_demand_item_time_tv"
            android:layout_alignParentLeft="true"
            android:id="@+id/cate_demand_item_start_num"
            style="@style/font_orange_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_orange_12"
            android:text="10000"
            android:layout_alignTop="@id/cate_demand_item_start_num"
            android:layout_toRightOf="@id/cate_demand_item_start_num"
            android:id="@+id/cate_demand_item_start_num_tv"/>


        <RelativeLayout
            android:layout_below="@id/cate_demand_item_start_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cate_demand_item_right_ll"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="2dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/search_look"
                    style="@style/font_gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cate_demand_item_look_num_tv"
                    style="@style/font_gray_12"
                    android:text="16813"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_12"
                    android:text="@string/search_time" />
            </LinearLayout>

            <TextView
                android:id="@+id/cate_demand_ite_deiscribe_tv"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/cate_demand_item_right_ll"
                android:text="购买购买购买购买购买买购买购买购购买购"
                style="@style/gray_12_tv"/>


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.promote.ebingo.category.CategoryActivity">

    <include layout="@layout/common_head_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/title_blue"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/category_left_cb"
            android:layout_width="0dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingTop="@dimen/sub_tab_pad_b_t"
            android:paddingBottom="@dimen/sub_tab_pad_b_t"
            android:paddingRight="@dimen/category_tab_pad_right"
            android:layout_marginBottom="1dp"
            android:checked="false"
            android:text="@string/supply_info"
            android:layout_weight="1"
            android:drawableRight="@drawable/category_orange_indicator"
            style="@style/font_orange_15"/>

        <CheckBox
            android:id="@+id/category_right_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:paddingTop="@dimen/sub_tab_pad_b_t"
            android:paddingBottom="@dimen/sub_tab_pad_b_t"
            android:paddingRight="@dimen/category_tab_pad_right"
            android:drawableRight="@drawable/category_orange_indicator"
            android:layout_marginBottom="1dp"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/look_num"
            style="@style/font_orange_15"/>

    </LinearLayout>

    <ListView
        android:id="@+id/category_lv"
        android:layout_width="match_parent"
        style="@style/listview_style"
        android:scrollbars="none"
        android:layout_height="match_parent" />

</LinearLayout>

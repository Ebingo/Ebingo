<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.promote.ebingo.InformationActivity.BuyInfoActivity">

    <include layout="@layout/common_head_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/buy_info_btm_ll"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            style="@style/info_content_pad"
            android:background="@color/into_enter_bg"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/buy_info_into_company_tv"
                style="@style/font_gray_15"
                android:text="进入企业"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/right_arro"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/buy_info_company_tv"
                style="@style/orange_15_tv"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/buy_info_into_company_tv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="南京普爾么網絡技術有限公司"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_above="@id/buy_info_btm_ll"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <ScrollView

                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        style="@style/info_content_pad"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/buy_info_name_tv"
                            style="@style/blue_15_tv"

                            android:text="放大法是否撒發生的份上"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/orange_14_tv"
                                android:text="@string/buy_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:id="@+id/buy_num_tv"
                                style="@style/orange_14_tv"
                                android:text="10000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/publish_time"
                                style="@style/gray_11_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/buy_info_publish_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/gray_11_tv"
                                android:text="2014-08-15 16:20" />

                            <TextView
                                android:layout_marginLeft="30dp"
                                style="@style/gray_11_tv"
                                android:text="@string/buy_look"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/publish_look_num_tv"
                                style="@style/gray_11_tv"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1024" />

                            <TextView
                                android:text="@string/search_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/gray_11_tv" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/divide_gray"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/info_content_pad">


                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/blue_15_tv"
                            android:text="@string/buy_detail"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/buy_info_detail_tv"
                            android:layout_width="match_parent"
                            style="@style/font_gray_14"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/buy_info_contact_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_white_15"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/tell"
                android:layout_gravity="center_horizontal"
                android:text="@string/contact_buy"
                android:background="@drawable/contact_btn_bg" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

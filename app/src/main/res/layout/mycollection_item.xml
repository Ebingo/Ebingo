<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_pad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_gray_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mycol_item_img"
        android:layout_width="@dimen/list_item_title_img_size"
        android:layout_height="@dimen/list_item_title_img_size"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mycol_item_name"
            style="@style/font_black_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="静里欧尼你哦粉色发额发的说法色发额发的说法色发额发的说法" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/font_red_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price" />

            <TextView
                android:id="@+id/mycol_item_price_tv"
                style="@style/font_red_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="15632" />

            <TextView
                style="@style/font_red_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/collect" />

                    <TextView
                        android:id="@+id/mycol_item_times_tv"
                        style="@style/font_gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="420" />

                    <TextView
                        style="@style/font_gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="3" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/mycol_item_time_tv"
            style="@style/font_gray_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-07-10" />

    </LinearLayout>

</LinearLayout>
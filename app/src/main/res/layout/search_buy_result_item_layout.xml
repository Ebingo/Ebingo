<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    style="@style/info_content_pad"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_buy_result_time_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            style="@style/gray_11_tv"
            android:text="22014-08-10"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/search_look" />

            <TextView
                android:id="@+id/search_result_item_look_num_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="2000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/search_time" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_result_black_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2014年韩版新款"
            android:ellipsize="end"
            style="@style/font_black_15" />
        <!--<TextView-->
        <!--android:id="@+id/search_result_red_name_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="连衣裙"-->
        <!--style="@style/font_red_15"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/search_result_describe_tv"
        style="@style/font_gray_12"
        android:layout_width="match_parent"
        android:text="發范德薩范德薩佛你。呢哦iohoinioj是"
        android:layout_height="wrap_content" />

</LinearLayout>

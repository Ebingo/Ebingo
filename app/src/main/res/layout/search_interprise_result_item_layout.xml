<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/info_content_pad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_gray_bg"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/search_interprise_item_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_result_province_tv"
                style="@style/font_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="江蘇" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/search_result_province_tv"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/search_result_black_name_tv"
                        style="@style/black_15_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vip_list_img_width"
                        android:text="南京普爾摩網絡有限公司" />

                    <ImageView
                        android:id="@+id/search_list_vip_img"
                        style="@style/list_vip_img_style"
                        android:layout_gravity="top|right"
                        android:scaleType="fitStart"
                        android:src="@drawable/vip_1_member" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/search_result_describe_tv"
            style="@style/font_gray_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="2" />

    </LinearLayout>


</LinearLayout>

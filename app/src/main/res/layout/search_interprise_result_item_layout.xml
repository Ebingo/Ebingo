<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    style="@style/info_content_pad"
    android:background="@drawable/click_gray_bg"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/search_interprise_item_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_search_item_img" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_result_province_tv"
                style="@style/font_gray_12"
                android:text="江蘇"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/search_result_black_name_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/black_15_tv"
                android:layout_toLeftOf="@id/search_result_province_tv"
                android:text="南京普爾摩網絡有限公司"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/search_result_describe_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="發年遼寧鬧死您哦iPhone跑哪裡里弄理髮wional9發你"
            style="@style/font_gray_12" />

    </LinearLayout>


</LinearLayout>

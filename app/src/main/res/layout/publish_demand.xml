<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <LinearLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout style="@style/frame_bg_layout">

            <TableRow
                android:id="@+id/pick_category"
                style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="分      类" />

                <View style="@style/vertical_divider_20" />

                <TextView
                    android:id="@+id/tv_category"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro" />
            </TableRow>

            <View style="@style/divider_horizontal" />

            <TableRow style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:includeFontPadding="true"
                    android:text="标      题" />

                <View style="@style/vertical_divider_20" />

                <EditText
                    android:id="@+id/edit_title"
                    style="@style/publish_edit"
                    android:hint="8-28字" />
            </TableRow>

            <View style="@style/divider_horizontal" />


            <TableRow
                android:id="@+id/pick_description"
                style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="描      述" />

                <View style="@style/vertical_divider_20" />

                <TextView
                    android:id="@+id/tv_description"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro"
                    android:hint="@string/word10" />
            </TableRow>
        </TableLayout>

        <TableLayout style="@style/frame_bg_layout">

            <TableRow style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="求购数量" />

                <View style="@style/vertical_divider_20" />

                <EditText
                    android:id="@+id/edit_demand_num"
                    style="@style/publish_edit"
                    android:hint="如10个，10斤等" />
            </TableRow>

            <View style="@style/divider_horizontal" />

            <TableRow style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="联 系 人" />

                <View style="@style/vertical_divider_20" />

                <EditText
                    android:id="@+id/edit_contact"
                    style="@style/publish_edit"
                    android:hint="至少2字" />
            </TableRow>

            <View style="@style/divider_horizontal" />

            <TableRow style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="手 机 号" />

                <View style="@style/vertical_divider_20" />

                <EditText
                    android:id="@+id/edit_mobile"
                    style="@style/publish_edit"
                    android:inputType="phone" />
            </TableRow>

        </TableLayout>

        <TableLayout style="@style/frame_bg_layout">

            <TableRow
                android:id="@+id/pick_tags"
                style="@style/publish_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="标      签" />

                <View style="@style/vertical_divider_20" />

                <TextView
                    android:id="@+id/tv_tags"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro"
                    android:hint="@string/label_hint" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btn_publish"
            style="@style/yellow_button"
            android:layout_marginTop="15dp"
            android:text="@string/btn_publish" />
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/company_setting"
            style="@style/cent_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enterprise_settings" />

        <View style="@style/divider_horizontal" />

        <TextView
            android:id="@+id/about_us"
            style="@style/cent_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_about" />

        <View style="@style/divider_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:id="@+id/check_update"
            android:layout_width="match_parent"
            style="@style/cent_item"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                style="@style/font_gray_15"
                android:layout_height="wrap_content"
                android:text="@string/check_update" />

            <TextView
                android:id="@+id/tv_version_name"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/light_gray"
                android:layout_height="wrap_content"
                android:text="当前版本1.0.0"
                android:layout_marginRight="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arro" />

        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <View style="@style/divider_horizontal" />

        <TextView
            android:id="@+id/clear_cache"
            style="@style/cent_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/clear_cache" />

        <View style="@style/divider_horizontal" />

        <TextView
            android:id="@+id/suggestion"
            style="@style/cent_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_suggestion" />

        <View style="@style/divider_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <View style="@style/divider_horizontal" />

        <TextView
            android:id="@+id/logout"
            style="@style/cent_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout" />

        <View style="@style/divider_horizontal" />
    </LinearLayout>
</LinearLayout>
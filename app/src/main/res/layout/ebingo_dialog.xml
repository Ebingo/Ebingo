<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ebingo_dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:text="New Text"
        android:textColor="@color/ebingo_dialog_title_color"
        android:textSize="@dimen/ebingo_dialog_title_textSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ebingo_dialog_title_color" />

    <TextView
        android:id="@android:id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:lineSpacingMultiplier="1.2"
        android:text="New TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew Text"
        android:textColor="@color/ebingo_message_color"
        android:textSize="@dimen/ebingo_message_textSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ebingo_button_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ebingo_dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/ebingo_button_textColor"
            android:textSize="@dimen/ebingo_button_textSize"
            android:textStyle="bold" />

        <View
            android:id="@+id/btn_divider1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/ebingo_button_divider" />

        <TextView
            android:id="@+id/button_neutral"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ebingo_dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="忽略"
            android:textColor="@color/ebingo_button_textColor"
            android:textSize="@dimen/ebingo_button_textSize"
            android:textStyle="bold" />

        <View
            android:id="@+id/btn_divider2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/ebingo_button_divider" />

        <TextView
            android:id="@+id/button_negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ebingo_dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/ebingo_button_textColor"
            android:textSize="@dimen/ebingo_button_textSize"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
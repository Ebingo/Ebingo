<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="com.promote.ebingo.InformationActivity.InterpriseMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/info_content_pad"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/interpris_main_img"
            android:layout_width="wrap_content"
            android:src="@drawable/interprise_main_img"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/frag_interprise_main_name_tv"
                    android:layout_width="wrap_content"
                    style="@style/font_black_15"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="义务市南涛服装有限公司"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/frag_interprise_main_vip_img"
                    android:src="@drawable/interprise_mian_vip"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="@string/address"/>

                <TextView
                    android:id="@+id/frag_interprise_main_addr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="义乌市松鼠路199号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="@string/http_addr" />

                <TextView
                    android:id="@+id/frag_interprise_main_httpaddr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="义乌市松鼠路199号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="@string/tell" />

                <TextView
                    android:id="@+id/frag_interprise_main_tell_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="义乌市松鼠路199号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="@string/contect" />

                <TextView
                    android:id="@+id/frag_interprise_main_context_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_11"
                    android:text="义乌市松鼠路199号" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/info_content_pad"
        android:background="@color/white"
        android:layout_marginTop="@dimen/section_divide_height"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/blue_15_tv"
            android:text="@string/interprise_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/frag_interprise_main_range_tv"
            android:layout_width="match_parent"
            style="@style/font_gray_14"
            android:text="你好哦哦，傻帽吧，被坑了吧。"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/section_divide_height"
        android:layout_width="match_parent"
        android:background="@color/white"
        style="@style/info_content_pad"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/blue_15_tv"
            android:layout_width="match_parent"
            android:text="@string/interprise_abstrace"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/frag_interprise_main_abstract_tv"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            style="@style/font_gray_14"
            android:text="傻帽，騙的就是你。"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/info_content_pad"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/interprise_sup_dem"
            style="@style/blue_15_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/interpise_main_sup_dem_lv"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

</LinearLayout>

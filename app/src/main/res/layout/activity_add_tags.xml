<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout_2" />

    <LinearLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical">

        <TextView
            style="@style/font_blue_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门标签(069dd4 24点)" />

        <com.promote.ebingo.publish.AutoLineLayout
            android:id="@+id/tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>

        <TextView
            style="@style/font_blue_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增标签(069dd4 24点)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <MultiAutoCompleteTextView
                android:id="@+id/edit_add_tags"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_height"
                android:layout_weight="1"
                android:background="@drawable/corner_frame"
                android:paddingLeft="3dp"
                android:paddingRight="3dp" />

            <Button
                android:id="@+id/btn_add"
                style="@style/yellow_button"
                android:layout_width="80dp"
                android:layout_height="@dimen/widget_height"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="添加" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

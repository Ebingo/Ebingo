<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/info_content_pad"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mysupply_item_img"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/list_item_title_img_size"
        android:layout_height="@dimen/list_item_title_img_size" />

    <ImageView
        android:id="@+id/mysupply_arro_img"
        android:layout_width="wrap_content"
        android:src="@drawable/right_arro"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/mysupply_item_img"
        android:layout_toLeftOf="@id/mysupply_arro_img"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            style="@style/black_15_tv"
            android:text="2014年新款牛仔外套"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/red_15_tv"
                android:text="@string/rmb_signe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mysupply_price_tv"
                style="@style/red_15_tv"
                android:text="300"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/red_15_tv"
                android:text="@string/price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mysupply_supply_num_tv"
                android:layout_width="wrap_content"
                style="@style/font_gray_12"
                android:text="35"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/font_gray_12"
                android:layout_marginLeft="1dp"
                android:text="@string/supply_start_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/mysupply_time"
            style="@style/gray_12_tv"
            android:text="2014-07-10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/center_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/center_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未注册用户"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_vipType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="游客"
                android:textColor="@color/text_black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_visitor"
                style="@style/rb_my_privilege_info"
                android:checked="true"
                android:text="游客"
                android:drawableTop="@drawable/rb_visitor" />

            <RadioButton
                android:id="@+id/rb_user"
                style="@style/rb_my_privilege_info"
                android:text="普通会员"
                android:drawableTop="@drawable/rb_user" />

            <RadioButton
                android:id="@+id/rb_vip"
                android:text="VIP会员"
                style="@style/rb_my_privilege_info"
                android:drawableTop="@drawable/rb_vip" />

            <RadioButton
                android:id="@+id/rb_vvip"
                android:text="VVIP会员"
                style="@style/rb_my_privilege_info"
                android:drawableTop="@drawable/rb_vvip" />

        </RadioGroup>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/info_fragment_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
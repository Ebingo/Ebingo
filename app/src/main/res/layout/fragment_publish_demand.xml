<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    >
    <LinearLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout style="@style/frame_bg_layout">
            <TableRow style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/category_spaced"/>
                <View style="@style/vertical_divider_20"/>
                <TextView
                    android:id="@+id/tv_pick_category"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro"
                  />
            </TableRow>
            <View style="@style/divider_horizontal"/>
            <TableRow

                style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/area_spaced"
                    />
                <View style="@style/vertical_divider_20"/>
                <TextView
                    android:id="@+id/tv_pick_region"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro"
                    />
            </TableRow>
            <View style="@style/divider_horizontal"/>
            <TableRow style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/price_spaced"/>
                <View style="@style/vertical_divider_20"/>
                <EditText
                    android:id="@+id/edit_price"
                    android:inputType="numberDecimal"
                    style="@style/publish_edit"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="元"
                    android:textColor="@color/publish_base_color"
                   />
            </TableRow>
        </TableLayout>
        <TableLayout style="@style/frame_bg_layout">
            <TableRow style="@style/publish_table_row" >
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/picture_spaced"/>
                <View style="@style/vertical_divider_20"/>
                <TextView
                    android:id="@+id/tv_pick_image"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro"
                    android:hint="1张"/>
            </TableRow>
            <View style="@style/divider_horizontal"/>
            <TableRow style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/description_spaced"
                    />
                <View style="@style/vertical_divider_20"/>
                <TextView
                    android:id="@+id/tv_pick_description"
                    style="@style/publish_edit"
                    android:drawableRight="@drawable/right_arro"
                    android:hint="@string/word10"/>
            </TableRow>
            <View style="@style/divider_horizontal"/>
            <TableRow style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/title_spaced"/>
                <View style="@style/vertical_divider_20"/>
                <EditText
                    android:id="@+id/edit_title"
                    style="@style/publish_edit"
                    android:hint="15字以内"
                    />
            </TableRow>
        </TableLayout>
        <TableLayout style="@style/frame_bg_layout">
            <TableRow style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/book_stand"/>
                <View style="@style/vertical_divider_20"/>
                <EditText
                    android:id="@+id/edit_book_standard"
                    style="@style/publish_edit"
                    />
            </TableRow>
            <View style="@style/divider_horizontal"/>
            <TableRow style="@style/publish_table_row" >
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/contact"
                    />
                <View style="@style/vertical_divider_20"/>
                <EditText
                    android:id="@+id/edit_contacts"
                    style="@style/publish_edit"
                    />
            </TableRow>
            <View style="@style/divider_horizontal"/>
            <TableRow style="@style/publish_table_row">
                <TextView
                    style="@style/pulish_text_style"
                    android:text="@string/mobile"/>
                <View style="@style/vertical_divider_20"/>
                <EditText
                    android:id="@+id/edit_phone"
                    style="@style/publish_edit"
                    android:inputType="phone"
                    />
            </TableRow>
        </TableLayout>
        <ImageView
            android:id="@+id/picked_image"
            android:layout_width="180dp"
            android:layout_marginTop="10dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher"/>
        <Button
            android:text="@string/btn_publish"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            style="@style/yellow_button"/>
    </LinearLayout>
</ScrollView>
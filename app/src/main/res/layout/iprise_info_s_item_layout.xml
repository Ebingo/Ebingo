<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    style="@style/info_content_pad">

    <ImageView
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:id="@+id/iprise_info_s_item_img"
        android:src="@drawable/test_search_item_img" />

    <LinearLayout
        android:layout_toRightOf="@id/iprise_info_s_item_img"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iprise_info_s_item_time"
                style="@style/gray_12_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="08-05"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/iprise_info_s_item_black_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/iprise_info_s_item_time"
                android:singleLine="true"
                android:text="2014年韩版新款"
                android:ellipsize="end"
                style="@style/font_black_15" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/font_red_15"
                android:text="@string/rmb_signe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/iprise_info_s_item_price_tv"
                style="@style/font_red_15"
                android:text="200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/search_look" />

            <TextView
                android:id="@+id/iprise_info_s_item_item_look_num_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="2000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/search_time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iprise_info_s_item_num"
                android:layout_width="wrap_content"
                style="@style/font_gray_12"
                android:text="200"
                android:singleLine="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:singleLine="true"
                android:text="@string/search_start" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
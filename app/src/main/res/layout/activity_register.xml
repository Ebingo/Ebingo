<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bule"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical|left"
            android:id="@+id/common_back_btn"
            style="@style/back_arro_style" />
        <TextView
            android:text="免费注册"
            android:gravity="center"
            style="@style/font_white_18"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:background="#4FC4EF"
            style="@style/font_white_18"
            android:text="@string/login_"
            />
    </FrameLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        style="@style/font_black_15"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_margin="12dp"
        android:hint="@string/phone_number"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:layout_margin="12dp"
        android:padding="5dp"
        style="@style/font_white_15"
        android:text="获 取 验 证 码"
        android:background="@drawable/btn_yellow"/>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.promote.ebingo.center.MyBookActivity">

    <include layout="@layout/common_head_layout_2" />

    <LinearLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/font_blue_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="我的订阅标签"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/arrange"
                style="@style/yellow_button"
                android:layout_width="80dp"
                android:layout_height="@dimen/widget_height"
                android:layout_gravity="right"
                android:checked="true"
                android:textOff="取消"
                android:textOn="管理"
                android:textSize="16sp" />
        </FrameLayout>

        <com.promote.ebingo.publish.AutoLineLayout
            android:id="@+id/tag_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            style="@style/font_blue_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订阅标签"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <MultiAutoCompleteTextView
                android:id="@+id/edit_add_tags"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_height"
                android:layout_weight="1"
                android:background="@drawable/corner_frame"
                android:paddingLeft="3dp"
                android:paddingRight="3dp" />

            <Button
                android:id="@+id/btn_add"
                style="@style/yellow_button"
                android:layout_width="80dp"
                android:layout_height="@dimen/widget_height"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="添加" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

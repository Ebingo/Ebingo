<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/list_item_style"
    android:background="@drawable/click_gray_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:id="@+id/search_list_item_img" />

    <LinearLayout
        android:layout_toRightOf="@id/search_list_item_img"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_result_black_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2014年韩版新款"
                android:ellipsize="end"
                style="@style/font_black_15" />
            <!--<TextView-->
            <!--android:id="@+id/search_result_red_name_tv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="连衣裙"-->
            <!--style="@style/font_red_15"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/font_red_15"
                android:text="@string/rmb_signe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/search_result_price_tv"
                style="@style/font_red_15"
                android:text="200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_min_num"
                android:layout_width="wrap_content"
                style="@style/font_gray_12"
                android:text="200"
                android:singleLine="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:singleLine="true"
                android:text="@string/search_start" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/search_look" />

            <TextView
                android:id="@+id/search_result_item_look_num_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="2000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/search_time" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_result_company_name_tv"
            style="@style/gray_11_tv"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="那經普爾摩網絡技術有限公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>

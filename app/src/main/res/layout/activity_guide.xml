        <RadioButton
            android:layout_width="10dp"
            android:button="@null"
            android:layout_margin="3dp"
            android:background="@drawable/dot_indicator"
            android:layout_height="10dp" />

        <RadioButton
            android:layout_width="10dp"
            android:button="@null"
            android:layout_margin="3dp"
            android:background="@drawable/dot_indicator"
            android:layout_height="10dp" />

        <RadioButton
            android:layout_width="10dp"
            android:button="@null"
            android:layout_margin="3dp"
            android:background="@drawable/dot_indicator"
            android:layout_height="10dp" />

        <RadioButton
            android:layout_width="10dp"
            android:button="@null"
            android:layout_margin="3dp"
            android:background="@drawable/dot_indicator"
            android:layout_height="10dp" />
    </RadioGroup>
</FrameLayout>
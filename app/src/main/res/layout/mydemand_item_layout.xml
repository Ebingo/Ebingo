<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/info_content_pad"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mydemand_name_tv"
            style="@style/black_15_tv"
            android:text="求购衣物挂求购衣物挂求购衣物挂"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_12"
                android:text="@string/buy_look" />

            <TextView
                style="@style/font_gray_12"
                android:layout_width="wrap_content"
                android:text="2000"
                android:id="@+id/mydemand_look_num_tv"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/font_gray_12"
                android:text="@string/look_unite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/mydemand_time_tv"
                android:layout_width="wrap_content"
                style="@style/font_gray_12"
                android:text="2014-07-10"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
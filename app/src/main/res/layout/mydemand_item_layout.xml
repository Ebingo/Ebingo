<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_pad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mydemand_name_tv"
            style="@style/black_15_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求购衣物挂求购挂物挂求购衣物挂" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                style="@style/font_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy_look" />

            <TextView
                android:id="@+id/mydemand_look_num_tv"
                style="@style/font_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000" />

            <TextView
                style="@style/font_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/look_unite" />

            <TextView
                android:id="@+id/mydemand_time_tv"
                style="@style/font_gray_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2014-07-10" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arro" />


</RelativeLayout>
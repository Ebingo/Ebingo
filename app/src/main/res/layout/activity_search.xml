<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.promote.ebingo.search.SearchActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bule">

        <ImageView
            android:id="@+id/search_back_btn"
           style="@style/back_arro_style" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_head_center_ll"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/white_search_bar1"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/search_categry_cb"
                    android:layout_width="wrap_content"
                    style="@style/font_blue_15"
                    android:button="@null"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/blue_arro_check"
                    android:text="@string/interprise"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/search_bar_et"
                    android:minWidth="100dp"
                    android:layout_marginLeft="2dp"
                    style="@style/font_black_15"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_search_btn"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/search_head_center_ll"
                android:layout_height="wrap_content"
                style="@style/font_white_15"
                android:text="@string/cancel"
                />

    </RelativeLayout>

    <ListView
        android:id="@+id/search_lv"
        android:dividerHeight="1dp"
        android:divider="@color/divide_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/search_clear_btn"
        android:padding="3dp"
        android:background="@color/gray_bg"
        android:layout_gravity="center_horizontal"
        android:text="@string/clear_history"
        android:layout_width="wrap_content"
        style="@style/font_gray_18"
        android:layout_height="wrap_content" />

</LinearLayout>

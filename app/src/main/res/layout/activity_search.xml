<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.promote.ebingo.search.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bule">


        <ImageView
            android:id="@+id/search_back_btn"
            android:src="@drawable/back_arro"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
             />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_head_center_ll"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/white_search_bar1"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/search_categry_cb"
                    android:layout_width="wrap_content"
                    style="@style/font_blue_15"
                    android:button="@null"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:background="@null"
                    android:drawableRight="@drawable/blue_arro_check"
                    android:text="@string/interprise"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/search_bar_et"
                    android:layout_marginLeft="4dp"
                    style="@style/font_black_15"
                    android:minWidth="150dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_search_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_cancel_btn"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/search_head_center_ll"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            style="@style/font_white_15"
            android:text="@string/cancel" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_result_key_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/info_content_pad">

        <TextView
            style="@style/gray_15_tv"
            android:text="@string/serch_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/search_key_tv"
            style="@style/gray_15_tv"
            android:layout_marginLeft="5dp"
            android:text="小公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/search_lv"
        android:dividerHeight="1dp"
        android:divider="@color/divide_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/search_clear_btn"
        android:padding="3dp"
        android:background="@color/gray_bg"
        android:layout_gravity="center_horizontal"
        android:text="@string/clear_history"
        android:layout_width="wrap_content"
        style="@style/font_gray_18"
        android:layout_height="wrap_content" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout" />

    <LinearLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/font_black_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_frame"
            android:padding="4dp"
            android:text="@string/notice_3d" />

        <Button
            android:id="@+id/btn_apply_online"
            style="@style/yellow_button"
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:text="在线申请" />

        <Button
            android:id="@+id/btn_consult"
            style="@style/blue_button"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="电话咨询" />
    </LinearLayout>
</LinearLayout>
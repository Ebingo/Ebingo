<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_buy"
        android:textColor="@color/right_blue"
        android:textSize="@dimen/font_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/right_blue"></LinearLayout>

    <TextView
        android:id="@+id/call_dialog_phone_num"
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/tell"
        android:drawablePadding="5dp"
        android:text="155651351651"
        android:textColor="@color/black"
        android:textSize="@dimen/font_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ebingo_button_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ebingo_button_divider"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/call_dialog_call_btn"
            style="@style/info_content_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="center"
            android:text="@string/make_call"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />

        <View
            android:id="@+id/btn_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/ebingo_button_divider" />

        <TextView
            android:id="@+id/call_dialog_cancel_btn"
            style="@style/info_content_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout" />


    <LinearLayout
        style="@style/info_content_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/about_logo" />

        <TableLayout style="@style/frame_bg_layout">

            <TableRow style="@style/frame_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="公司名称："
                    android:textColor="@color/right_blue" />

                <TextView
                    style="@style/publish_edit"
                    android:text="@string/about_name" />
            </TableRow>

            <View style="@style/divider_horizontal" />

            <TableRow style="@style/frame_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="联系人："
                    android:textColor="@color/right_blue" />

                <TextView
                    style="@style/publish_edit"
                    android:text="@string/about_contact" />
            </TableRow>

            <View style="@style/divider_horizontal" />

            <TableRow style="@style/frame_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="企业邮箱："
                    android:textColor="@color/right_blue" />

                <TextView
                    style="@style/publish_edit"
                    android:text="@string/about_email" />
            </TableRow>

            <View style="@style/divider_horizontal" />

            <TableRow style="@style/frame_table_row">

                <TextView
                    style="@style/publish_text_style"
                    android:text="联系电话："
                    android:textColor="@color/right_blue" />

                <TextView
                    style="@style/publish_edit"
                    android:text="@string/customer_service_number" />
            </TableRow>

            <View style="@style/divider_horizontal" />

        </TableLayout>
    </LinearLayout>
</LinearLayout>
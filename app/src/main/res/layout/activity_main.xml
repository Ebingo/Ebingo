<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="3dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/main_rb"
            style="@style/tab_btn"
            android:checked="true"
            android:drawableTop="@drawable/main_tab" />

        <RadioButton
            android:id="@+id/find_rb"
            style="@style/tab_btn"
            android:drawableTop="@drawable/find_tab" />

        <RadioButton
            android:id="@+id/publish_rb"
            style="@style/tab_btn"
            android:drawableTop="@drawable/publish_tab" />

        <RadioButton
            android:id="@+id/center_rb"
            style="@style/tab_btn"
            android:drawableTop="@drawable/center_tab" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/main_content_fl"
        android:layout_above="@id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>

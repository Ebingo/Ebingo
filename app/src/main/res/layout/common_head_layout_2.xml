<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_color"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_register_input_yzm">

    <ImageView
        android:id="@+id/common_back_btn"
        style="@style/back_arro_style"
        android:layout_gravity="center_vertical|left"
        android:onClick="onClick" />

    <TextView
        android:id="@+id/common_title_tv"
        style="@style/font_black_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="标 题" />

    <TextView
        android:id="@+id/commit_title_done"
        style="@style/font_black_15"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="完 成" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/title_divider_color" />
</FrameLayout>